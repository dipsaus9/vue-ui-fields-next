{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "types": [
      "@types/validator"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./example/src/**/*.ts",
    "./example/src/**/*.js",
    "./example/src/**/*.tsx",
    "./example/src/**/*.vue",
    "./example/tests/**/*.ts",
    "./packages/vue-ui-fields/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
