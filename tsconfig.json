{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": [
			"esnext",
			"esnext.asynciterable",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./example/src/*"
			],
			"@/*": [
				"./example/src/*"
			],
			"~~/*": [
				"./*"
			],
			"@@/*": [
				"./*"
			],
			"types": [
				"@types/node",
				"@types/jest"
			]
		},
  },
  "include": [
    "./example/src/**/*.ts",
    "./example/src/**/*.js",
    "./example/src/**/*.tsx",
    "./example/src/**/*.vue",
    "./example/tests/**/*.ts",
    "./packages/vue-ui-fields/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
